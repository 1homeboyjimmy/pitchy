ALERTS_ENABLED=true

# Telegram bot settings
ALERT_TELEGRAM_BOT_TOKEN=
# Single chat ID or comma-separated list of chat IDs
ALERT_TELEGRAM_CHAT_ID=
# Optional: load bot token from Lockbox instead of plain value above
ALERT_TELEGRAM_BOT_TOKEN_LOCKBOX_SECRET_ID=
ALERT_TELEGRAM_BOT_TOKEN_LOCKBOX_ENTRY_KEY=ALERT_TELEGRAM_BOT_TOKEN

# Endpoints
ALERT_HEALTH_URL=http://127.0.0.1/health
ALERT_METRICS_URL=http://127.0.0.1/metrics
ALERT_HTTP_HOST_HEADER=pitchy.pro

# Alert thresholds
ALERT_5XX_SPIKE_THRESHOLD=20
ALERT_DISK_PATH=/
ALERT_DISK_USAGE_THRESHOLD_PCT=85
ALERT_SSL_HOST=pitchy.pro
ALERT_SSL_PORT=443
ALERT_SSL_DAYS_THRESHOLD=14

# Monitor runtime
ALERT_REQUEST_TIMEOUT_SECONDS=10
ALERT_STATE_FILE=/opt/ai-startup/ops/alerts/state.json
